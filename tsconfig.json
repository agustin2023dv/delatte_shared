{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "paths": {
  "@dto/*": ["./shared/dto/*"],
  "@interfaces/*": ["./shared/interfaces/*"],
  "@validators/*": ["./shared/validators/*"],
  "@utils/*": ["./shared/utils/*"]
},
  "include": ["services","utils", "interfaces", "index.ts", "dtos", "validators"],
  "exclude": ["node_modules", "dist"]
}